.tab_show {
  display: inline;
}

.tab_hide {
  display: none;
}

page {
  height: 100%;
}

.row-1 {
  float: left;
  width: 100%;
  border-bottom: 2rpx solid #ddd;
  padding: 5px 0 5px 15px;
  height: 30px;
}

.row-2-left {
  float: left;
  width: 200rpx;
  height: 100%;
  text-align: center;
  border-right: 2rpx solid #ddd;
}

.sel {
  background-color: #ffc107;
  color: white;
}

.row-2-left view {
  float: left;
  width: 100%;
  border-right: 2rpx solid #ddd;
  border-bottom: 2rpx solid #ddd;
}

.row-2-left view span {
  float: left;
  width: 160rpx;
  padding: 10rpx;
  margin: 10rpx;
}

.row-2-right {
  float: left;
  width: 528rpx;
  padding: 0px 10rpx;
}

.row-2-right-col {
  float: left;
  width: 100%;
  padding: 10rpx 0px;
  height: 160rpx;
  border-bottom: 2rpx solid #ddd;
}

.row-2-right-col image {
  float: left;
  width: 200rpx;
  height: 160rpx;
}

.row-2-right-col .content {
  float: left;
  width: 308rpx;
  height: 150rpx;
  padding: 0px 10rpx;
}

.row-2-right-col .content .name {
  float: left;
  width: 100%;
  padding: 5rpx 0px;
  font-size: 32rpx;
}

.row-2-right-col .content .price {
  float: left;
  width: 100%;
  padding: 5rpx 0px;
  font-size: 28rpx;
}

.row-2-right-col .content .icons {
  border-radius: 50px;
  height: 15px;
  width: 15px;
  text-align: center;
  color: white;
  font-size: 10px;
  float: left;
}

.addType-view {
  float: left;
  margin: 200rpx 0px 0px 90px;
  width: 150px;
  background-color: white;
  text-align: center;
  border-radius: 10rpx;
  font-size: 32rpx;
}

.addType-view-title {
  float: left;
  width: 100%;
  padding: 20rpx 0px;
  border-bottom: 2rpx solid #ddd;
  background-color: #009688;
  color: #ddd;
  border-radius: 10rpx 10rpx 0 0;
}

/* 弹出层 */

.popup-layer {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0px;
  left: 0px;
  z-index: 999;
  background-color: rgba(0, 0, 0, 0.5);
}

.sel-type-list {
  padding: 20rpx 0px;
  border-bottom: 2rpx solid #ddd;
  float: left;
  width: 100%;
}

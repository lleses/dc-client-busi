<view class="container">  
  <!--head-->  
  <view class="tit">  
    <view class="title_val">选择分店</view>  
  </view>  
  <!--list-->  
  <view class="shopslist">  
    <!--item-->  
    <block wx:for="{{shopslist}}">  
      <view class="shops">  
        <!--左侧图片盒子-->  
        <view>  
          <image src="{{item.imgUrl}}" class="shop-img" />  
        </view>  
        <!--右侧说明部分-->  
        <view class="shop-cont">  
          <!--上--店铺明-->  
          <view class="shops-navigator">  
            <text class="shop-name">{{item.name}}</text>  
          </view>    
          <!--下--店铺地址-->  
          <view class="shop-address">  
            <text>{{item.price}}</text>  
           
          </view>  
        </view>  
      </view>  
    </block>  
  </view>  
</view>